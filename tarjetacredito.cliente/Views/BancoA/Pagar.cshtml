@model Movimientos

@{
    ViewData["Title"] = "Pagar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Pagar tarjeta @ViewBag.Accion</h3>


<div class="card col-4">
    <div class="card-body">
        <form asp-action="PagarTc" asp-controller="BancoA" method="post">

            <div class="form-group">
                <input type="hidden" asp-for="IdTarjeta" />
                <div class="form-group">
                    <label asp-for="FTransaccion">Fecha</label>
                    <input asp-for="FTransaccion" type="date" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Descripcion">Descripcion</label>
                    <input asp-for="Descripcion" type="text" required class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Monto">Monto</label>
                    <input asp-for="Monto" type="number" min="1" max="3000" class="form-control" />
                </div>
            </div>
            <br />
            <button type="submit" class="btn btn-primary">Pagar</button>

        </form>
    </div>
</div>

<script>
    const fechaActual = new Date().toISOString().split('T')[0];
    document.getElementById('FTransaccion').min = fechaActual;

</script>
