@model List<Tarjeta>
@{
    ViewData["Title"] = "Inicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Bienvenido,</h3>
@ViewBag.Accion
<br />
<div class="card">
    <div class="card-header">
        Lista de Tarjetas
    </div>
    <div class="card-body">
        <hr />

        <table class="table">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>N. Tarjeta</th>
                    <th>Limite</th>
                    <th>Disponible</th>
                    <th>Pago Contado</th>
                    <th>Pago Minimo</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Nombre</td>
                        <td>XXXXXXXXXXXX @item.NTarjeta.Substring(item.NTarjeta.Length -4)</td>
                        <td>$@item.Limite</td>
                        <td>$@item.Disponible</td>
                        <td>$@item.PContado</td>
                        <td>$@item.PMinimo</td>
                        <td>
                            <a asp-action="Pagar" asp-controller="BancoA" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Pagar</a>
                            <a asp-action="Comprar" asp-controller="BancoA" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Comprar</a>
                            <a asp-action="Movimientos" asp-controller="BancoA" asp-route-id="@item.Id" class="btn btn-success btn-sm">Movimientos</a>
                            <a asp-action="EstadoCuenta" asp-controller="BancoA" asp-route-id="@item.Id" class="btn btn-info btn-sm">Estado de cuenta</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>