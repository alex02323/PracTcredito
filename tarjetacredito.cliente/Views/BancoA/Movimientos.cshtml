@model List<Movimientos>
@{
    ViewData["Title"] = "Movimientos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Movimientos</h3>

<div class="card">
    <div class="card-header">
        Lista de movimientos
    </div>
    <div class="card-body">
        <hr />

        <table class="table">
            <thead>
                <tr>
                    <th>Fecha</th>
                    <th>Descripcion</th>
                    <th>Monto</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.FTransaccion.ToString("dd/MM/yyyy")</td>
                            <td>@item.Descripcion</td>
                            <td>$@item.Monto</td>
                        </tr>
                    }
                }
                else
                {
                    <td>Sin Movimientos</td>
                }
            </tbody>
        </table>
    </div>
</div>